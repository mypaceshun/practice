#!/usr/bin/env bash

#==============
# touch-sh.sh
#==============

function usage_exit() {
  echo 'Usage: touch-py newfile'
  exit 1
}

if [ $# -ne 1 ]; then
  usage_exit
fi

touch $1.sh
cp ${SHUN_SHELL_HOME}/python/etc/template/template.sh $1.sh
chmod +x $1.sh

echo '' >> $1.sh
echo '#===============================' >> $1.sh
echo '# '$1'.sh' >> $1.sh
echo '#===============================' >> $1.sh
