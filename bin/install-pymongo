#!/usr/bin/env bash
# -*- coding: utf-8 -*-
# vi: set expandtab shiftwidth=4 :

# auther: shun kawai

#===============================
# install-pymongo.sh
#===============================

if [ $UID -ne 0 ]; then
    echo "This shell need SuperUser"
    exit 1
fi

case `get-os` in
    Ubuntu)
        smart-install python3
        smart-install python3-pip
        pip3 install pymongo         
    ;;
    CentOS)
        smart-install python34
        smart-install python34-pip
        pip3 install pymongo
    ;;
    unknown)
        echo "OS type is unknown"
        exit 1
    ;;
esac

# install pymongo

